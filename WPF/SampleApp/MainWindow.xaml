<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <DockPanel HorizontalAlignment="Right">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button x:Name="okButton" Content="OK" Width="75" Margin="5" Click="okButton_Click"/>
            <Button x:Name="canselButton" Content="キャンセル" Width="75" Margin="5" Click="canselButton_Click"/>
        </StackPanel>
        <StackPanel Width="291">
            <TextBlock TextWrapping="Wrap" Text="メッセージを入力して下さい。"/>
            <TextBox x:Name="messageTextBox" Height="22" TextWrapping="Wrap" Margin="90,0,98,0"/>
        </StackPanel>
    </DockPanel>
</Window>
